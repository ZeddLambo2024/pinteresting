<p id="notice"><%= notice %></p>
<div class = "panel panel-default">
  <div class = "panel-heading">
    <h1>Listing Pins</h1>
  </div>
  <div class = "panel-body">
    <table class = "table table-default">   
      <thead>
        <tr>
          <th>Description</th>
          <th>User</th>
          <th colspan="3">Options:</th>
        </tr>
      </thead>
      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= pin.description %></td>
            <td><%= pin.user.email if pin.user %></td>
            <td><%= link_to 'Show', pin, class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-warning" %></td>
            <td><%= link_to 'Trash', pin, method: :delete, data: {confirm: 'You sure?'},  class: "btn  btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class = "panel-footer">
    <%= link_to '+ New Pin', new_pin_path, class: "btn btn-lg btn-success"%>
    </div>
    </div>